<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Happy_tooth_Mobile.MainPage" Title="Вход">
    <StackLayout Padding="20" Spacing="15">
        <!-- Название стоматологии -->
        <Label Text="Стоматология Happy Tooth"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="Start" 
               FontAttributes="Bold" />

        <!-- Иконка зуба -->
        <Image Source="tooth_icon.png" 
               HorizontalOptions="Center" 
               VerticalOptions="Center" 
               HeightRequest="100" />

        <Entry x:Name="usernameEntry" Placeholder="Логин" />
        <Entry x:Name="passwordEntry" Placeholder="Пароль" IsPassword="True" />
        <Button Text="Войти" Clicked="OnLoginClicked" />
        <Button Text="Регистрация" Clicked="OnRegisterClicked" 
                BackgroundColor="Transparent" TextColor="Blue" />
    </StackLayout>
</ContentPage>
